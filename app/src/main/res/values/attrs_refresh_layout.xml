<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshLayout">
        <attr name="refresh_enabled_up" format="boolean" />
        <attr name="refresh_enabled_down" format="boolean" />

        <attr name="refresh_style_up" format="enum">
            <enum name="classic" value="0" />
            <enum name="upper" value="1" />
            <enum name="lower" value="2" />
            <enum name="mid" value="3" />
        </attr>

        <attr name="refresh_style_down" format="enum">
            <enum name="classic" value="0" />
            <enum name="upper" value="1" />
            <enum name="lower" value="2" />
            <enum name="mid" value="3" />
        </attr>
        <attr name="refresh_friction" format="float" />
        <attr name="refresh_duration" format="integer" />

        <attr name="refresh_smooth_length" format="integer" />
        <attr name="refresh_smooth_duration" format="integer" />
        <attr name="refresh_background_header" format="reference" />
        <attr name="refresh_background_footer" format="reference" />
        <attr name="refresh_is_coordinator" format="boolean" />
    </declare-styleable>
</resources>